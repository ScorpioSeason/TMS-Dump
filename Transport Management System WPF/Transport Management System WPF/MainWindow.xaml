<Window x:Class="Transport_Management_System_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Transport_Management_System_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid DockPanel.Dock="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0" >
            <TabItem Name="Buyer" Header="Buyer Tab">
                <TabItem.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Red" Name="RedMenuItem" Click="RedMenuItem_Click"/>
                        <MenuItem Header="Blue" Name="BlueMenuItem" />
                        <MenuItem Header="Orange" Name="OrangeMenuItem" />
                    </ContextMenu>
                </TabItem.ContextMenu>
                <TabItem.Content>
                    <DataGrid Name="DG1" ItemsSource="{Binding}" AutoGenerateColumns="False" >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="First Name"  Binding="{Binding FirstName}"/>
                            <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" />
                            <!--The Email property contains a URI.  For example "mailto:lucy0@adventure-works.com"-->
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem.Content>
            </TabItem>
            <TabItem Name="ShapeTabItem" Header="Shape Tab"></TabItem>
        </TabControl>
        <StatusBar Grid.Row="1">
            <StatusBarItem>
                <TextBlock
                    x:Name="Output"
                    Text="" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
