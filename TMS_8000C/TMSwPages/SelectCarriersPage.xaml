                            <Grid.RowDefinitions>
                                <RowDefinition x:Name="ActiveOrdersControls" Height="auto"></RowDefinition>
                                <RowDefinition x:Name="ActiveOrdersMain" Height="*"></RowDefinition>
                                <RowDefinition x:Name="ActiveOrdersButtons" Height="auto"></RowDefinition>
                            </Grid.RowDefinitions>

                            <!--Controls Row (0) -->
